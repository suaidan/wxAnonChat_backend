#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../_mongodb-server@1.0.0@mongodb-server/bin/mongod" "$@"
  ret=$?
else 
  node  "$basedir/../_mongodb-server@1.0.0@mongodb-server/bin/mongod" "$@"
  ret=$?
fi
exit $ret
